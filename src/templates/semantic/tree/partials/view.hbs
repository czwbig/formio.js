<div class="ui grid">
  <div class="row">
    {% values.forEach(function(value) { %}
    <div class="two wide column">
      {{ value }}
    </div>
    {% }) %}
    <div class="five wide column">
      <div class="ui mini right floated buttons">
        {% if (node.hasChildren) { %}
        <button ref="toggleNode" class="ui button toggleNode">{{ t(node.collapsed ? 'Expand' : 'Collapse') }}</button>
        <div class="or"></div>
        {% } %}
        {% if (!readOnly) { %}
        <button ref="addChild" class="ui button primary addChild">{{ t('Add') }}</button>
        <div class="or"></div>
        <button ref="editNode" class="ui button editNode">{{ t('Edit') }}</button>
        <div class="or"></div>
        <button ref="removeNode" class="ui button negative removeNode">{{ t('Delete') }}</button>
        {% if (node.revertAvailable) { %}
        <div class="or"></div>
        <button ref="revertNode" class="ui button negative revertNode">{{ t('Revert') }}</button>
        {% } %}
        {% } %}
      </div>
    </div>
  </div>
</div>
